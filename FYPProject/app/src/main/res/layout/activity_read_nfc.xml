<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arnold.fypproject.Activity.ReadNFCActivity">

    <TextView
        android:id="@+id/nfc_sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image_nfc_logo"
        android:layout_centerHorizontal="true"
        android:padding="30dp"
        android:text="sample_title"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/image_nfc_logo"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_nfc_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_nfc_logo"
        android:layout_centerHorizontal="true"
        android:padding="30dp"
        android:text="Place device near NFC Tag"
        android:textSize="20dp"
        android:textStyle="bold"/>

</RelativeLayout>
