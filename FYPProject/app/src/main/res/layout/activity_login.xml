<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- Logo -->
    <ImageView
        android:id="@+id/image_teamLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:src="@drawable/ic_teamlogo1" />

    <!--Title-->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_teamLogo"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:paddingBottom="20sp"
        android:textStyle="bold"/>

    <!-- Username -->
    <EditText
        android:id="@+id/text_username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="@string/login_username"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:text="arnold.lee.2013"
        android:inputType="text" />

    <!-- Password -->
    <EditText
        android:id="@+id/text_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_username"
        android:layout_alignStart="@+id/text_username"
        android:layout_below="@+id/text_username"
        android:layout_marginTop="10dp"
        android:hint="@string/login_password"
        android:inputType="textPassword"
        android:text="123" />

    <!--Login button-->
    <Button
        android:id="@+id/button_login"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#489aff"
        android:onClick="sendMessage"
        android:text="@string/button_login"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

