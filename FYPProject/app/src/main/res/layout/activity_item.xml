<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    tools:context="fypproject.Activity.TaskActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--1st table layout-->
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:padding="5sp">

            <!--ID-->
            <TableRow>
                <TextView
                    android:id="@+id/title_itemId"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:paddingTop="5sp"
                    android:text="ID:"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/content_itemId"
                    android:layout_weight="2"
                    android:width="0dp"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:paddingTop="5sp"
                    android:text="1"
                    android:textSize="17sp"/>
            </TableRow>

            <!--desc-->
            <TableRow>
                <TextView
                    android:id="@+id/title_description"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:paddingTop="5sp"
                    android:text="@string/description"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/content_description"
                    android:layout_weight="2"
                    android:width="0dp"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:paddingTop="5sp"
                    android:text="5 bananas"
                    android:textSize="17sp"/>
            </TableRow>

            <!--tag id-->
            <TableRow>
                <TextView
                    android:id="@+id/title_tagId"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:paddingTop="5sp"
                    android:text="Tag ID:"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/content_tagId"
                    android:layout_weight="2"
                    android:width="0dp"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:paddingTop="5sp"
                    android:text="nfctag"
                    android:textSize="17sp"/>
            </TableRow>

        </TableLayout>

        <!--line break-->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/header_packageDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="5dp"
            android:textSize="17sp"
            android:text="Activity Log"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!--Activity log table-->
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TableRow>
                <TextView
                    android:id="@+id/header1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/blackborder"
                    android:padding="2dp"
                    android:paddingLeft="5dp"
                    android:text="header1"/>
                <TextView
                    android:id="@+id/header2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/blackborder"
                    android:padding="2dp"
                    android:paddingLeft="5dp"
                    android:text="header2"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/content1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/blackborder"
                    android:padding="2dp"
                    android:paddingLeft="5dp"
                    android:text="header1"/>
                <TextView
                    android:id="@+id/content2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/blackborder"
                    android:padding="2dp"
                    android:paddingLeft="5dp"
                    android:text="header2"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/content3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/blackborder"
                    android:padding="2dp"
                    android:paddingLeft="5dp"
                    android:text="header1"/>
                <TextView
                    android:id="@+id/content4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/blackborder"
                    android:padding="2dp"
                    android:paddingLeft="5dp"
                    android:text="header2"/>
            </TableRow>


        </TableLayout>

    </LinearLayout>

</ScrollView>