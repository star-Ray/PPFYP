<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arnold.fypproject.Activity.TaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--1st table layout-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20sp"
            android:padding="5sp">

            <TableRow>
                <TextView
                    android:id="@+id/title_receiver"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:text="Receiver:"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/content_receiver"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:text="Mr. Song Rui"
                    android:textSize="15sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/title_contactNumber"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:text="Contact No:"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/content_contactNumber"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:text="98765432"
                    android:textSize="15sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/title_address"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:text="Address:"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/content_address"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:text="123 Hougang St 21 \n#11-02 \nS519929"
                    android:textSize="15sp"/>
            </TableRow>
        </TableLayout>

        <!--line break-->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/header_packageDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:text="Package Details"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is glass item. Handle with care."
            android:textSize="15sp"/>

        <!--line break-->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"/>

        <!--3rd table row-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5sp">

            <TableRow>
                <TextView
                    android:id="@+id/title_pickup"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:text="Pickup Time:"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/title_delivery"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:text="Delivery Time:"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/content_time1"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:text="10:00AM - 2:00PM"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/content_time2"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:text="10:00AM - 2:00PM"
                    android:textSize="15sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/content_day1"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:text="Today"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/content_day2"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:text="Tomorrow"
                    android:textSize="15sp"/>
            </TableRow>
        </TableLayout>






    </LinearLayout>



</ScrollView>
